<%- include('../../partials/boilerplate-start') %>
<link rel="stylesheet" href="/css/learn/learn.css" />
<%- include('../../partials/boilerplate-end') %>
<%- include('../../partials/header') %>


<main>
    <h2 class="learning-subject"> <%=lesson.languageLevel%> <span>•</span> Study <span>•</span> <%= lesson.subject %> <span>•</span> <%=lesson.title%></h2>
    <div class="lesson-study">
        <p><%=lesson.content%></p>
    </div>
    <div class="progress-form">
        <% if (isDone) { %>
            <h5 class="progress-form__heading--done">Done</h5>
            <form action="/learn/<%=lesson.languageLevel%>/study/<%=lesson.subject%>/<%=lesson.title%>/undone" method="POST">
                <button type="submit" class="lesson-button">
                    <svg type="submit"  aria-hidden="true" focusable="false" data-prefix="fas" data-icon="sticky-note" class="done svg-inline--fa fa-sticky-note fa-w-14" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path fill="currentColor" d="M312 320h136V56c0-13.3-10.7-24-24-24H24C10.7 32 0 42.7 0 56v400c0 13.3 10.7 24 24 24h264V344c0-13.2 10.8-24 24-24zm129 55l-98 98c-4.5 4.5-10.6 7-17 7h-6V352h128v6.1c0 6.3-2.5 12.4-7 16.9z"></path></svg>
                </button>
        </form>
        <% } else { %>
            <h5 class="progress-form__heading--not-done">Not Done</h5>
            <form action="/learn/<%=lesson.languageLevel%>/study/<%=lesson.subject%>/<%=lesson.title%>/done" method="POST">
                <button type="submit" class="lesson-button">
                    <svg aria-hidden="true" focusable="false" data-prefix="far" data-icon="sticky-note" class="not-done svg-inline--fa fa-sticky-note fa-w-14" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path fill="currentColor" d="M448 348.106V80c0-26.51-21.49-48-48-48H48C21.49 32 0 53.49 0 80v351.988c0 26.51 21.49 48 48 48h268.118a48 48 0 0 0 33.941-14.059l83.882-83.882A48 48 0 0 0 448 348.106zm-128 80v-76.118h76.118L320 428.106zM400 80v223.988H296c-13.255 0-24 10.745-24 24v104H48V80h352z"></path></svg></button>
            </form>
        <% } %>
    </div>
</main>

<script src="/javascript/reloadPage.js"></script>
<script src="/javascript/headerMenu.js"></script>

<%- include('../../partials/footer') %>