  <a href="/learn/<%=languageLevel%>/test"><button class="invert-colors">Start Test</button></a>
</div>

<h2 class="section-heading">Recomendations</h2>
<div class="recommendations">
<% if (recommendations.length > 0 ) { %>
  <% recommendations.forEach((entry) => { %>
    <a href="/learn/<%=entry.languageLevel%>/study/<%=entry.subject%>/<%=entry._id%>" class="recommendation">
      <div >
        <h2><%=entry.languageLevel%></h2>
        <h5><%=entry.subject%></h5>
        <h4><%=entry.title%></h4>
      </div>
    </a>
    <% }) %>
<% } else { %>
  <h4>Oops! Something went wrong.</h4>
<% } %>
</div>
