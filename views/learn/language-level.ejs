  <h2 class="section-heading">Latest Activity</h2>
  <div class="latest-activity">
<% if (latestActivity.length > 0 ) { %>
    <% latestActivity.reverse().forEach((entry) => { %>
      <a href="/learn/<%=entry.languageLevel%>/study/<%=entry.languageLevelSubject%>/<%=entry.lessonID%>" class="latest-activity-record">
      <div >
        <h2><%=entry.languageLevel%></h2>
        <h5><%=entry.languageLevelSubject%></h5>
        <h4><%=entry.title%></h4>
      </div>
    </a>
    <% }) %>
<% } else { %>
  <h4>No recent activities. Start learning Now!</h4>
<% } %>
</div>

