
<%- include('../../../partials/boilerplate-start') %>
<link rel="stylesheet" href="/css/admin/admin.css">
</head>
<body>
<main>
  <%- include('../../partials/aside') %>
    <div class="main-content">
        <form method="POST" id="levelForm">
            <select name="level" id="level" onchange = "lessonForm.style.display = 'none'">
            <% if (editedLesson.languageLevel === 'A1') { %>
                <option type="submit" value="A1" selected="selected">A1</option>
            <% } else { %>
                <option type="submit" value="A1">A1</option>
            <% } %>
        
            <% if (editedLesson.languageLevel === 'A2') { %>
                <option type="submit" value="A2" selected="selected">A2</option>
            <% } else { %>
                <option type="submit" value="A2">A2</option>
            <% } %>
        
            <% if (editedLesson.languageLevel === 'B1') { %>
                <option type="submit" value="B1" selected="selected">B1</option>
            <% } else { %>
                <option type="submit" value="B1">B1</option>
            <% } %>
                
            <% if (editedLesson.languageLevel === 'B2') { %>
                <option type="submit" value="B2" selected="selected">B2</option>
            <% } else { %>
                <option type="submit" value="B2">B2</option>
            <% } %>
                
            <% if (editedLesson.languageLevel === 'C1') { %>
                <option type="submit" value="C1" selected="selected">C1</option>
            <% } else { %>
                <option type="submit" value="C1">C1</option>
            <% } %>
            <% if (editedLesson.languageLevel === 'C2') { %>
                <option type="submit" value="C2" selected="selected">C2</option>
            <% } else { %>
                <option type="submit" value="C2">C2</option>
            <% } %>
            </select>

            <input type="hidden" id="subjectHiddenInput" value="<%=editedLesson.subject%>">
            <button type="submit">Dalej</button>
          </form>
        
          <form action="/admin/lessons/edit-lesson/<%=editedLesson._id%>" method="POST" id="lessonForm" class="edit-lesson-form">
            <input type="hidden" id="levelHiddenInput" name="level">
        
            <label for="subject">Subject</label>
            <select name="subject" id="subjects">
            </select>
        
            <label for="title">Title</label>
            <input name="title" value="<%=editedLesson.title%>" type="text">
        
            <label for="content">Content</label>
            <textarea name="content"><%=editedLesson.content%></textarea>
        
            <!-- Downloadable files here maybe -->

            <input type="hidden" value="<%=lesson._id%>" name="lessonID" />
        
            <button type="submit">Submit</button>
          </form>
    </div>
</main>

<script src="/socket.io/socket.io.js"></script>
<script src="/javascript/admin/addLesson.js"></script>

<%- include('../../../partials/footer') %>
