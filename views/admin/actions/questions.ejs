<%- include('../../partials/boilerplate-start') %> 
<link rel="stylesheet" href="/css/admin/admin.css">
<%- include('../../partials/boilerplate-end') %>

<main>
  <%- include('../partials/aside') %>
  <div class="main-content">
    <a href="/admin/questions/add-question"><button>Create</button></a>
      <form action="/admin/questions/search" method="POST" class="search-form margin-top">
          <input type="text" name="searchQueryCategory" placeholder="Category...">
          <select name="searchQueryLevel">
            <option>Nothing</option>
            <option value="A1">A1</option>
            <option value="A2">A2</option>
            <option value="B1">B1</option>
            <option value="B2">B2</option>
            <option value="C1">C1</option>
            <option value="C2">C2</option>
          </select>
          <button type="submit">Search</button>
      </form>
      <form action="/admin/questions/action" method="POST">
        <select name="action" id="adminSelect" onchange="showMessageInput()">
            <option value="nothing">Nothing</option>
            <option value="delete">Delete</option>
        </select>
        <button type="submit">Execute</button>
        <div>
          <div class="question-header">
            <input type="checkbox" id="allCheckboxesCheckedInput">
            <h4>Level</h4>
            <h4>Subject</h4>
            <h4>Question</h4>
        </div>
        <div class="question-box fake">
          <h3></h3>
          <h3></h3>
          <h3></h3>
          <h3></h3>
          <form>
            <button></button>
          </form>
          <form >
            <input/>
            <button</button>
          </form>
        </div>
          <% questions.forEach((question) => { %>
            <div class="question-box">
              <input type="checkbox" name="chosenQuestionsID[]" value="<%=question._id%>">
                <h3><%=question.languageLevel%></h3>
                <h3><%=question.subject%></h3>
                <h3><%=question.question%></h3>
                <form action="/admin/questions/edit-question/<%= question._id %>" method="GET">
                  <button type="submit">Edit</button>
                </form>
                <form action="/admin/questions/delete-question/<%=question._id%>" method="POST">
                  <input type="hidden" value="<%=question._id%>" name="questionID" />
                  <button type="submit">Delete</button>
                </form>
            </div>
            <% }) %>
        </div>
  </form>
  </div>
</main>

<script src="/javascript/adminPanelActions.js"></script>

<%- include('../../partials/footer') %>
